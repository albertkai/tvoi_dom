.top-main{
  position: relative;
  width: 100%;
  height: 480px;
  background-image: url(/img/skyscrapers.jpg);
  -webkit-background-size: cover;
  background-size: cover;

  .row{

    >div{

      >div{
        border: 4px solid white;
        text-align: center;
        width: 130px;
        height: 130px;
        text-align: center;
        line-height: 120px;
        font-size: 90px;
        color: white;
        margin: 153px auto 20px auto;
        border-radius: 100px;
      }
      >p{
        color: white;
        text-align: center;
        padding: 0px 40px;
        font-size: 19px;
        font-weight: 400;
      }
    }
  }
  
