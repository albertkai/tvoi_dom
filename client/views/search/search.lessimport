.form-control{
  border: 1px solid @mainColor;
}

.search-string{

  border-top: 2px solid white;
  border-bottom: 2px solid white;

  >.container{

    >.row{

      padding: 26px 0;

      >div:nth-child(1){

        >.row >div{
          padding-left: 5px !important;
          padding-right: 5px !important;
        }

      }

      >div:nth-child(2){
        padding-left: 5px;
        padding-right: 5px;
        button{
          width: 100%;
          font-weight: 600;
        }
      }

    }

  }
  
}

#search-map{
  width: 100%;
  height: 300px;
}