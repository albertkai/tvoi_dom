.company{
  
  .heading{
    position: relative;
    background: white;
    overflow: hidden;
    .page-header{
      border: 0;
    }
    &:before {
      content: ' ';
      display: block;
      position: absolute;
      left: 0;
      top: 13px;
      width: 100%;
      height: 100%;
      z-index: 1;
      opacity: 0.12;
      background-image: url(/img/bg.png);
      -webkit-background-size: 22%;
      background-size: 30%;
    }
  }

  .main-info{
    padding-bottom: 10px;
  }

}